			<action method="addItem"><type>skin_js</type><js>js/rma/prototype.js</js></action>
			<action method="addItem"><type>skin_js</type><js>js/rma/validation.js</js></action>
			<action method="addItem"><type>skin_js</type><js>js/rma/effects.js</js></action>
			<action method="addItem"><type>skin_js</type><js>js/rma/form.js</js></action>
			<action method="addItem"><type>skin_js</type><js>js/rma/jquery.tokeninput.js</js></action>
		
			<!-- Add css to header-->
			<action method="addCss"><css>css/rma.css</css></action>
			<action method="addCss"><css>css/token-input.css</css></action>
		</reference>
	</rma_request_editrmaform>
	
	<!-- Define rma report form -->
	<rma_request_rmareportdetail translate="label" module="rma">
		<label>Rma Report Details</label>
		 <update handle="customer_account"/>
		 <reference name="my.account.wrapper">
           <block type="rma/request_rmaReportDetails" name="request_rmaReportDetails" template="request_rma/request/rmaReportDetails.phtml" />
        </reference>
        <!-- Add css to header-->
        <reference name="head">
			<action method="addCss"><css>css/rma.css</css></action>
		</reference>
	</rma_request_rmareportdetail>
	
	<!-- Define rma view form -->
	<rma_request_rmaview translate="label" module="rma">
		<label>Rma View</label>
		 <update handle="customer_account"/>
		 <reference name="my.account.wrapper">
           <block type="rma/request_rmaView" name="request_rmaView" template="request_rma/request/rmaView.phtml" />
        </reference>
        <!-- Add css to header-->
        <reference name="head">
			<action method="addCss"><css>css/rma.css</css></action>
		</reference>
	</rma_request_rmaview>
	
