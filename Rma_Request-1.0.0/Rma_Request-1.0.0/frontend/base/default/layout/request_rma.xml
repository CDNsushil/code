<layout version="0.1.0">
	
<!-- Default layout, loads most of the pages -->
   <default>
        <!-- Request_rma -->
         <reference name="left">
			<!--<block type="rma/enquiry_rmaForm" name="enquiry_rmaForm" template="reports_rma/enquiry/rmaForm.phtml" />-->
        </reference>

    </default>

<!-- Rma report pages, rendered for all tabs in dashboard -->
    <customer_account>
        <!-- Request_rma -->
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label" module="rma"><name>rma</name><path>rma/request</path><label>RMA</label></action>
        </reference>
        <remove name="left.rma"/>
    </customer_account>
	
	<!-- Define rma report listing -->
	<rma_request_index translate="label" module="rma">
		<label>Rma List</label>
		<update handle="customer_account"/>
		<reference name="my.account.wrapper">
           <block type="rma/request_rmaList" name="request_rmaList" template="request_rma/request/rmaList.phtml" />
        </reference>
        <!-- Add css to header-->
        <reference name="head">
			<action method="addCss"><css>css/rma.css</css></action>
		</reference>
	</rma_request_index>
	
	<!-- Define rma report form -->
	<rma_request_rmaform translate="label" module="rma">
		<label>Rma Form</label>
		 <update handle="customer_account"/>
		 <reference name="my.account.wrapper">
           <block type="rma/request_rmaForm" name="request_rmaForm" template="request_rma/request/rmaForm.phtml" />
        </reference>

        <reference name="head">
			<!-- Remove js file from head -->
			<action method="removeItem"><type>js</type><name>prototype/prototype.js</name></action>
			<action method="removeItem"><type>js</type><name>prototype/validation.js</name></action>
			<action method="removeItem"><type>js</type><name>scriptaculous/effects.js</name></action>
			<action method="removeItem"><type>js</type><name>varien/form.js</name></action>
			
			<!-- Rearrange and add js files in head -->
			<action method="addItem"><type>skin_js</type><js>js/rma/jquery-1.8.1.min.js</js></action>
			<action method="addItem"><type>skin_js</type><js>js/rma/prototype.js</js></action>
			<action method="addItem"><type>skin_js</type><js>js/rma/validation.js</js></action>
			<action method="addItem"><type>skin_js</type><js>js/rma/effects.js</js></action>
			<action method="addItem"><type>skin_js</type><js>js/rma/form.js</js></action>
			
			 <!-- Add css to header-->
			<action method="addCss"><css>css/rma.css</css></action>
		</reference>
	</rma_request_rmaform>
	
	<!-- Define rma type form -->
	<rma_request_rmatypeform translate="label" module="rma">
		<label>Rma Report Form</label>
		<update handle="customer_account"/>
		 <reference name="my.account.wrapper">
			<block type="rma/request_rmaTypeForm" name="request_rmaTypeForm" template="request_rma/request/rmaTypeForm.phtml"></block>
        </reference>
        
        <reference name="head">
			<!-- Remove js file from head -->
			<action method="removeItem"><type>js</type><name>prototype/prototype.js</name></action>
			<action method="removeItem"><type>js</type><name>prototype/validation.js</name></action>
			<action method="removeItem"><type>js</type><name>scriptaculous/effects.js</name></action>
			<action method="removeItem"><type>js</type><name>varien/form.js</name></action>
			
			<!-- Rearrange and add js files in head -->
			<action method="addItem"><type>skin_js</type><js>js/rma/jquery-1.8.1.min.js</js></action>
			<action method="addItem"><type>skin_js</type><js>js/rma/prototype.js</js></action>
			<action method="addItem"><type>skin_js</type><js>js/rma/validation.js</js></action>
			<action method="addItem"><type>skin_js</type><js>js/rma/effects.js</js></action>
			<action method="addItem"><type>skin_js</type><js>js/rma/form.js</js></action>
			<action method="addItem"><type>skin_js</type><js>js/rma/jquery.tokeninput.js</js></action>
		
			<!-- Add css to header-->
			<action method="addCss"><css>css/rma.css</css></action>
			<action method="addCss"><css>css/token-input.css</css></action>
		</reference>
	</rma_request_rmatypeform>
	
	<!-- Define rma edit type form -->
	<rma_request_editrmaform translate="label" module="rma">
		<label>Rma Edit Form</label>
		<update handle="customer_account"/>
		 <reference name="my.account.wrapper">
			<block type="rma/request_editRmaForm" name="request_editRmaForm" template="request_rma/request/editRmaForm.phtml"></block>
        </reference>
        
        <reference name="head">
			<!-- Remove js file from head -->
			<action method="removeItem"><type>js</type><name>prototype/prototype.js</name></action>
			<action method="removeItem"><type>js</type><name>prototype/validation.js</name></action>
			<action method="removeItem"><type>js</type><name>scriptaculous/effects.js</name></action>
			<action method="removeItem"><type>js</type><name>varien/form.js</name></action>
			
			<!-- Rearrange and add js files in head -->
